<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:gravity="center"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/image_xiezuo_img"/>

    <ImageView
        android:id="@+id/img_style"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/image_xiezuo_wenzi"/>

    <ImageView
        android:id="@+id/img_undo"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/image_editor_undo"/>

    <ImageView
        android:id="@+id/img_redo"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/image_editor_redo"/>

</LinearLayout>